{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}


    <h1>a post</h1>

        <p><strong>{{ post.title}}</strong></p>
        <p>{{ post.content}}</p>

    <a href="{{ path('app_posts')}}" class="btn btn-primary">Retour</a>
    <a href="{{ path('post_delete', {id:post.id}) }}" class="btn btn-danger">Delete</a>
    <a href="{{ path('post_edit', {id:post.id}) }}" class="btn btn-warning">Edit</a>



    <div class="container">
        {% for comment in post.comments %}

                <p><strong>{{ comment.content }}</strong></p>
                <p>{{ comment.createdAt|date('d/m/Y - H:s') }}</p>
            <hr>

        {% endfor %}
    </div>







{% endblock %}
